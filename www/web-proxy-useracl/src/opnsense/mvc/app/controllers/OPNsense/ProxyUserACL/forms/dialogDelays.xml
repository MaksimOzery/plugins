<form>
    <field>
        <id>Delay.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
    </field>
    <field>
        <id>Delay.Priority</id>
        <label>Priority</label>
        <type>text</type>
        <help>Enter rule priority</help>
    </field>
    <field>
        <id>Delay.Class</id>
        <label>Class</label>
        <type>dropdown</type>
        <help>Select delay class.</help>
    </field>
    <field>
        <id>Delay.Aggregate</id>
        <label>Aggregate</label>
        <type>text</type>
        <help>Enter aggregat*e speed (bytes/s)</help>
        <style>class one two three four</style>
    </field>
    <field>
        <id>Delay.Individual</id>
        <label>Individual</label>
        <type>text</type>
        <help>Enter individual speed</help>
        <style>class two three four</style>
    </field>
    <field>
        <id>Delay.Network</id>
        <label>Network</label>
        <type>text</type>
        <help>Enter network speed (bytes/s)</help>
        <style>class three four</style>
    </field>
    <field>
        <id>Delay.User</id>
        <label>User</label>
        <type>text</type>
        <help>Enter user speed (bytes/s)</help>
        <style>class four</style>
    </field>
    <field>
        <id>Delay.Tagrate</id>
        <label>Tagrate</label>
        <type>text</type>
        <help>Enter tagrate speed (bytes/s)</help>
        <style>class five</style>
    </field>
    <field>
        <id>Delay.Users</id>
        <label>User/group</label>
        <type>select_multiple</type>
        <help>Select a user/group.</help>
    </field>
    <field>
        <id>Delay.Domains</id>
        <label>Domains</label>
        <type>dropdown</type>
        <help>Select domains.</help>
    </field>
    <field>
        <id>Delay.Srcs</id>
        <label>Source IPs</label>
        <type>dropdown</type>
        <help>Select Source IPs</help>
    </field>
    <field>
        <id>Delay.Dsts</id>
        <label>Destination IPs</label>
        <type>dropdown</type>
        <help>Select Destination IPs</help>
    </field>
    <field>
        <id>Delay.Agents</id>
        <label>Browser/user-agents</label>
        <type>dropdown</type>
        <help>Select Browser/user-agents</help>
    </field>
    <field>
        <id>Delay.Times</id>
        <label>Schedules</label>
        <type>dropdown</type>
        <help>Select Schedules</help>
    </field>
    <field>
        <id>Delay.Mimes</id>
        <label>Mime types</label>
        <type>dropdown</type>
        <help>Select MIME type reply</help>
    </field>
    <field>
        <id>Delay.Arps</id>
        <label>MAC addresses</label>
        <type>dropdown</type>
        <help>Select MAC-addresses</help>
    </field>
    <field>
        <id>Delay.remoteACLs</id>
        <label>Remote Access Control Lists</label>
        <type>dropdown</type>
        <help>Select Remote Access Control List</help>
    </field>
</form>
