<form>
    <field>
        <id>Outgoing.enabled</id>
        <label>Enabled</label>
        <type>checkbox</type>
    </field>
    <field>
        <id>Outgoing.IPAddr</id>
        <label>IP address</label>
        <type>text</type>
        <help>Enter outgoing IP address</help>
    </field>
    <field>
        <id>Outgoing.Priority</id>
        <label>Priority</label>
        <type>text</type>
        <help>Enter rule priority</help>
    </field>
    <field>
        <id>Outgoing.Users</id>
        <label>User/group</label>
        <type>select_multiple</type>
        <help>Select a user/group.</help>
    </field>
    <field>
        <id>Outgoing.Domains</id>
        <label>Domains</label>
        <type>dropdown</type>
        <help>Select domains.</help>
    </field>
    <field>
        <id>Outgoing.Srcs</id>
        <label>Source IPs</label>
        <type>dropdown</type>
        <help>Select Source IPs</help>
    </field>
    <field>
        <id>Outgoing.Dsts</id>
        <label>Destination IPs</label>
        <type>dropdown</type>
        <help>Select Destination IPs</help>
    </field>
    <field>
        <id>Outgoing.Agents</id>
        <label>Browser/user-agents</label>
        <type>dropdown</type>
        <help>Select browser/user-agents</help>
    </field>
    <field>
        <id>Outgoing.Times</id>
        <label>Schedules</label>
        <type>dropdown</type>
        <help>Select Schedules</help>
    </field>
    <field>
        <id>Outgoing.Mimes</id>
        <label>Mime types</label>
        <type>dropdown</type>
        <help>Select MIME type reply</help>
    </field>
    <field>
        <id>Outgoing.Arps</id>
        <label>MAC addresses</label>
        <type>dropdown</type>
        <help>Select MAC-addresses</help>
    </field>
    <field>
        <id>Outgoing.remoteACLs</id>
        <label>Remote Access Control Lists</label>
        <type>dropdown</type>
        <help>Select Remote Access Control List</help>
    </field>
</form>
